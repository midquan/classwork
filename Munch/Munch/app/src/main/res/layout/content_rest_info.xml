<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.teamcookiemonsters.munch.RestInfoActivity"
    tools:showIn="@layout/activity_rest_info">

    <!-- linear layout to list restaurant info -->
    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        >

        <!-- reason -->
        <TextView
            android:id="@+id/reason_text"
            android:hint="Eventually your reason will be here!"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:layout_marginBottom="16dp"
            android:divider="@drawable/divider">

            <!-- address -->
            <TextView
                android:id="@+id/address_text"
                android:hint="1234 The Address\nGoes, Here\n12345"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                />

            <!-- phone number -->
            <TextView
                android:id="@+id/phone_text"
                android:hint="(123) 456-7890"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_gravity="left"
                />

        </LinearLayout>

        <!-- is open? -->
        <!--
        <TextView
            android:id="@+id/isopen_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_gravity="right"
            />
            -->

        <TextView
            android:id="@+id/price_text"
            android:hint="$$$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_margin="@dimen/text_margin"
            android:layout_gravity="left"
            />

        <TextView
            android:id="@+id/rating_text"
            android:hint="5.0"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_gravity="left"
            />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
